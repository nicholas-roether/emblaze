{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsxImportSource": "solid-js",
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "importHelpers": true,
    "skipLibCheck": true
  }
}
